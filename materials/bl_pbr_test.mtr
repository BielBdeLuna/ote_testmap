textures/bl/glass/unclean
{
	noSelfShadow
	noshadows
	twosided
	translucent
	glass
	forceoverlays

	qer_editorimage textures/glass/unclean.tga

	{
                Program           heatHaze.vfp
                vertexParm              0       time * 0 , time * 0 // texture scrolling
                vertexParm              1       1.5         // magnitude of the distortion
                fragmentProgram			heatHaze.vfp
                fragmentMap             0       _currentRender
                fragmentMap             1       textures/glass/surface_n.tga // the normal map for distortion
             
    }

	{	
		maskcolor				
	    map	makealpha(textures/glass/unclean.tga)
	}
	
	/*
	{
	    blend gl_dst_alpha, gl_one
	    maskalpha
       	cubeMap		env/gen2
			red		Parm0
	        green   Parm1
	        blue	Parm2
        texgen		reflect

	}
    */
    bumpmap heightmap(textures/glass/unclean.tga, 0.1)
    {
        blend specularmap
		map makeIntensity(textures/glass/unclean.tga)
		//map		colours/white8.tga
		red     0.26
        green   0.26
        blue    0.26
    }		
}

